<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_discount_for_sale_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:hint="@string/hint_discount_amount" />

    <EditText
        android:id="@+id/add_discount_for_sale_text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:hint="@string/hint_discount_percent" />

    <Button
        android:id="@+id/add_discount_for_sale_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_discount_for_sale_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Save"
        android:layout_gravity="center_horizontal" />

</LinearLayout>